<% provide(:title, 'Sign up') %>

<div class = "container">
  <div class="col-sm-12 col-md-6 col-md-offset-3">  
    
    
    <div class = "signupform center">
      <p style="background-color:#D6F0FF;">Already have an account? Skip the line and <a href =  "/signin"> sign in here. </a> </p>
    <h1><center>READY TO START EATING?<center></h1>
    <p> Easily sign up by providing just your name and email. <br>You can fill out your profile in more detail later. </p>
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

     
      <br>
      <%= f.text_field :name, placeholder: " First Name" %>
      <br>
    
      <br>
      <%= f.text_field :email, placeholder: " Email"%>
      <br>
     
      <br>
      <%= f.password_field :password, placeholder: " Password" %>
      <br>  
      
      <br>
      <%= f.password_field :password_confirmation, placeholder: " Confirm Password" %>
      <br>
      <%= f.submit "Join Now", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
  </div>

</div>
