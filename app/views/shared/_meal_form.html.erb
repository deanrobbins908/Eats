<%= form_for(@meal) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "Meal Title..." %>
		<%= f.text_area :content, placeholder: "Describe The Meal.." %>
  </div>
  <%= f.submit "Create Meal", class: "btn btn-large btn-primary" %>
<% end %>